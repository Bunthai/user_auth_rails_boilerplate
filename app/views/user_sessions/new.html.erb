<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <div class="card card-login mt-5">
        <div class="card-body">
          <header class="pb-15">
            <h1>Log In</h1>
          </header>

          <%= render 'shared/flash_message' %>

          <%= form_tag user_session_path, method: :post do %>
            <div class="form-group mb-3">
              <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Username' %>
            </div>

            <div class="form-group mb-3">
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
            </div>

            <div class="form-group text-right">
              <%= submit_tag 'Log In', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>